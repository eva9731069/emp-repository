{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nimport homeLayout from \"@/components/HomeView.vue\";\nimport store from \"../store\";\nimport axios from \"axios\";\nimport router from \"../router\";\nexport default {\n  components: {\n    homeLayout\n  },\n  data() {\n    return {\n      workStatus: \"off\",\n      // 預設為下班狀態\n      showSuccessModal: false // 控制打卡成功視窗的顯示\n    };\n  },\n\n  methods: {\n    setWorkStatus(status) {\n      this.workStatus = status;\n    },\n    clockIn() {\n      console.log(\"GET_USERNAME=>\" + store.state.empId);\n      // 模擬打卡操作，這裡使用setTimeout函數模擬異步操作\n      axios.post(\"/user/checkIn\", {\n        emp_account: this.emp_account,\n        emp_password: this.emp_password\n      }).then(response => {\n        this.sessionData = response.data;\n\n        //登入成功後跳轉頁面\n        if (this.sessionData != \"\") {\n          router.push(\"/home\");\n          console.warn(\"signup\", this.emp_account, this.emp_password);\n        } else {\n          alert(\"登入失敗\");\n        }\n      }).catch(error => {\n        console.error(error);\n      });\n    },\n    closeModal() {\n      this.showSuccessModal = false;\n    }\n  },\n  watch: {\n    workStatus(newStatus) {\n      // 監聽workStatus的變化，當選擇「上班」或「下班」時，自動顯示打卡成功視窗\n      if (newStatus === \"on\" || newStatus === \"off\") {\n        this.clockIn();\n      }\n    }\n  }\n};","map":{"version":3,"names":["homeLayout","store","axios","router","components","data","workStatus","showSuccessModal","methods","setWorkStatus","status","clockIn","console","log","state","empId","post","emp_account","emp_password","then","response","sessionData","push","warn","alert","catch","error","closeModal","watch","newStatus"],"sources":["C:\\Users\\eva97\\emp-repository\\demo\\emp-web\\src\\components\\CheckInView.vue"],"sourcesContent":["<template>\r\n  <!-- 套用HomeView.vue頁面 -->\r\n  <home-layout />\r\n  <div>\r\n    <label>\r\n      <input type=\"radio\" value=\"off\" v-model=\"workStatus\" />\r\n      下班\r\n    </label>\r\n    <label>\r\n      <input type=\"radio\" value=\"on\" v-model=\"workStatus\" />\r\n      上班\r\n    </label>\r\n    <button @click=\"clockIn\">打卡</button>\r\n\r\n    <div v-if=\"showSuccessModal\" class=\"modal\">\r\n      <div class=\"modal-content\">\r\n        <h2>打卡成功</h2>\r\n        <button @click=\"closeModal\">關閉</button>\r\n      </div>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport homeLayout from \"@/components/HomeView.vue\";\r\nimport store from \"../store\";\r\nimport axios from \"axios\";\r\nimport router from \"../router\";\r\n\r\n\r\nexport default {\r\n  components: {\r\n    homeLayout,\r\n  },\r\n  data() {\r\n    return {\r\n      workStatus: \"off\", // 預設為下班狀態\r\n      showSuccessModal: false, // 控制打卡成功視窗的顯示\r\n    };\r\n  },\r\n  methods: {\r\n    setWorkStatus(status) {\r\n      this.workStatus = status;\r\n\r\n      \r\n    },\r\n    clockIn() {\r\n    \r\n    console.log(\"GET_USERNAME=>\"+store.state.empId);\r\n      // 模擬打卡操作，這裡使用setTimeout函數模擬異步操作\r\n      axios\r\n        .post(\"/user/checkIn\", {\r\n          emp_account: this.emp_account,\r\n          emp_password: this.emp_password,\r\n        })\r\n        .then((response) => {\r\n          this.sessionData = response.data;\r\n\r\n          //登入成功後跳轉頁面\r\n          if (this.sessionData != \"\") {\r\n            router.push(\"/home\");\r\n            console.warn(\"signup\", this.emp_account, this.emp_password);\r\n          } else {\r\n            alert(\"登入失敗\");\r\n          }\r\n        })\r\n        .catch((error) => {\r\n          console.error(error);\r\n        });\r\n    },\r\n    closeModal() {\r\n      this.showSuccessModal = false;\r\n    },\r\n  },\r\n  watch: {\r\n    workStatus(newStatus) {\r\n      // 監聽workStatus的變化，當選擇「上班」或「下班」時，自動顯示打卡成功視窗\r\n      if (newStatus === \"on\" || newStatus === \"off\") {\r\n        this.clockIn();\r\n      }\r\n    },\r\n  },\r\n};\r\n</script>\r\n\r\n<style>\r\n.modal {\r\n  position: fixed;\r\n  top: 0;\r\n  left: 0;\r\n  width: 100%;\r\n  height: 100%;\r\n  background-color: rgba(0, 0, 0, 0.5);\r\n  display: flex;\r\n  justify-content: center;\r\n  align-items: center;\r\n}\r\n\r\n.modal-content {\r\n  background-color: #fff;\r\n  padding: 20px;\r\n  text-align: center;\r\n}\r\n\r\nbutton {\r\n  margin-top: 10px;\r\n}\r\n</style>\r\n"],"mappings":";AAwBA,OAAOA,UAAS,MAAO,2BAA2B;AAClD,OAAOC,KAAI,MAAO,UAAU;AAC5B,OAAOC,KAAI,MAAO,OAAO;AACzB,OAAOC,MAAK,MAAO,WAAW;AAG9B,eAAe;EACbC,UAAU,EAAE;IACVJ;EACF,CAAC;EACDK,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,UAAU,EAAE,KAAK;MAAE;MACnBC,gBAAgB,EAAE,KAAK,CAAE;IAC3B,CAAC;EACH,CAAC;;EACDC,OAAO,EAAE;IACPC,aAAaA,CAACC,MAAM,EAAE;MACpB,IAAI,CAACJ,UAAS,GAAII,MAAM;IAG1B,CAAC;IACDC,OAAOA,CAAA,EAAG;MAEVC,OAAO,CAACC,GAAG,CAAC,gBAAgB,GAACZ,KAAK,CAACa,KAAK,CAACC,KAAK,CAAC;MAC7C;MACAb,KAAI,CACDc,IAAI,CAAC,eAAe,EAAE;QACrBC,WAAW,EAAE,IAAI,CAACA,WAAW;QAC7BC,YAAY,EAAE,IAAI,CAACA;MACrB,CAAC,EACAC,IAAI,CAAEC,QAAQ,IAAK;QAClB,IAAI,CAACC,WAAU,GAAID,QAAQ,CAACf,IAAI;;QAEhC;QACA,IAAI,IAAI,CAACgB,WAAU,IAAK,EAAE,EAAE;UAC1BlB,MAAM,CAACmB,IAAI,CAAC,OAAO,CAAC;UACpBV,OAAO,CAACW,IAAI,CAAC,QAAQ,EAAE,IAAI,CAACN,WAAW,EAAE,IAAI,CAACC,YAAY,CAAC;QAC7D,OAAO;UACLM,KAAK,CAAC,MAAM,CAAC;QACf;MACF,CAAC,EACAC,KAAK,CAAEC,KAAK,IAAK;QAChBd,OAAO,CAACc,KAAK,CAACA,KAAK,CAAC;MACtB,CAAC,CAAC;IACN,CAAC;IACDC,UAAUA,CAAA,EAAG;MACX,IAAI,CAACpB,gBAAe,GAAI,KAAK;IAC/B;EACF,CAAC;EACDqB,KAAK,EAAE;IACLtB,UAAUA,CAACuB,SAAS,EAAE;MACpB;MACA,IAAIA,SAAQ,KAAM,IAAG,IAAKA,SAAQ,KAAM,KAAK,EAAE;QAC7C,IAAI,CAAClB,OAAO,CAAC,CAAC;MAChB;IACF;EACF;AACF,CAAC"},"metadata":{},"sourceType":"module","externalDependencies":[]}